<Window x:Class="REvision.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:REvision"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="lbxStudents" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="52,84,501,64" SelectionChanged="lbxStudents_SelectionChanged"/>
        <ListBox x:Name="lbxSubjects" HorizontalAlignment="Left" Height="283" Margin="364,86,0,0" VerticalAlignment="Top" Width="245" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="lbxSubjects_SelectionChanged"/>
        <Image x:Name="imgGrade" HorizontalAlignment="Left" Height="100" Margin="658,86,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="Sort" HorizontalAlignment="Left" Margin="721,349,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
